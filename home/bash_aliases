alias l='ls -CF'
alias la='ls -CFA'
alias ll='ls -lF'
alias lla='ls -lFA'
[ -x "$(which ack-grep)" ] && alias ack='ack-grep'
[ -x "$(which colordiff)" ] && alias diff='colordiff'

case "$(hostname -s)" in
  jamesreggio-airbnb)
    alias rc='rails console'
    alias be='bundle exec'

    alias redis='redis-server'
    alias resque='bundle exec rake resque:server'
    alias worker='QUEUE=* bundle exec rake environment resque:work'
    alias memcache='memcached -m 32 -p 11211'

    alias dyson='dyson-local.arx'
    alias pricing='pricing-local.arx'
    alias search='bin/start-search-dev.bash'

    alias p30='passenger start -p 3000'
    alias p31='passenger start -p 3100'
    alias p32='passenger start -p 3200'
    alias shotgun='bundle exec shotgun'
    alias blast='node app.js'

    function os() { curl -s -G --data-urlencode "q=$@" http://ec2-54-224-39-142.compute-1.amazonaws.com:8080/omnisearch/; }
    ;;
esac

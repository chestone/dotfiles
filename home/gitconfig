[core]
	editor = vim
	excludesfile = ~/.gitignore
[user]
	name = James Reggio
	email = james.reggio@gmail.com
[github]
	user = jamesreggio
[diff]
	tool = Kaleidoscope
[difftool]
	prompt = false
[difftool "Kaleidoscope"]
	cmd = ksdiff-wrapper git \"$LOCAL\" \"$REMOTE\"
[color]
	ui = auto
[rerere]
	enabled = true
[alias]
	b = branch
	ci = commit
	co = checkout
	d = diff
	dc = diff --cached
	ds = diff --stat
	dsc = diff --stat --cached
	dt = difftool
	dtc = difftool --cached
	f = fetch -p
	l = log --graph --abbrev-commit --decorate=short --format=format:'%C(bold blue)%h%C(reset)%C(bold magenta)%d%C(reset) %C(white)%s%C(reset) %C(dim white)%an%C(reset)'
	ld = log --graph --abbrev-commit --decorate=short --date=relative --format=format:'%C(bold blue)%h%C(reset) %C(bold green)%ar%C(reset)%C(bold magenta)%d%C(reset) %C(white)%s%C(reset) %C(dim white)%an%C(reset)'
	ll = log --graph --decorate=short
	m = merge
	man = help
	p = push --mirror
	rb = rebase
	rem = remote
	ri = rebase -i
	s = status --short --branch
	sm = submodule
	sta = stash apply
	stl = stash list
	stp = stash pop
	sts = stash save
[rebase]
	autosquash = true

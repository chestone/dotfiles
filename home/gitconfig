[core]
	editor = vim
	excludesfile = ~/.gitignore
[user]
	name = James Reggio
	email = james.reggio@stripe.com
[color]
	ui = auto
[grep]
	lineNumber = true
[push]
	default = upstream
[rebase]
	autosquash = true
[rerere]
	enabled = true
[status]
	relativePaths = false
[alias]
	b    = branch
	c    = commit
	ca   = commit -a
	cam  = commit -a -m
	co   = checkout
	d    = diff
	ds   = diff --stat
	dc   = diff --cached
	dcs  = diff --cached --stat
	f    = fetch -p
	g    = grep
	ls   = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
	ll   = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
	ld   = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short
	ldr  = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=relative
	m    = merge
	man  = help
	p    = push
	pa   = push --mirror
	pu   = pull --ff-only
	r    = reset
	rb   = rebase
	rbi  = rebase -i
	rba  = rebase --abort
	rbc  = rebase --continue
	rem  = remote
	rems = remote -v show
	s    = status --short --branch
	sta  = stash apply
	std  = stash drop
	stl  = stash list
	stp  = stash pop
	sts  = stash save

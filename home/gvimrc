" Type
colo black
set guifont=Monaco:h13

" Scrolling
set guioptions-=l
set guioptions-=L
set guioptions-=r
set guioptions-=R

" Chrome
set guioptions-=m
set guioptions-=T
set guioptions-=e

" Completion
inoremap <C-space> <C-x><C-o>

" Other
set visualbell t_vb=

" Leaders
nmap <leader>u :GundoToggle<cr>
nmap <leader>r :ruby @finder = nil<cr>
nmap <leader>t :FuzzyFinderTextMate<cr>

" FuzzyFinder
let g:fuzzy_ignore='*.png;*.jpg;*.gif;*bmp;*.o;*.class'

" Highlight word under cursor
set updatetime=500
hi CursorToken guibg=#242424
autocmd CursorHold * silent! exe printf('match CursorToken /\<%s\>/', escape(expand('<cword>'), '\'))
autocmd CursorMoved * match none

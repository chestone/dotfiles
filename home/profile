export PATH=$PATH:/usr/local/bin
export PATH=$PATH:/usr/local/sbin

case "$(uname)" in
  Darwin) export PATH=$PATH:$HOME/Code/bin;;
  Linux) export PATH=$PATH:$HOME/bin;;
esac

case "$(hostname -s)" in
  jamesreggio-airbnb)
    export LOCAL_MYSQL_USERNAME=jamesreggio
    export LOCAL_MYSQL_PASSWORD=324706100785
    export DYLD_FALLBACK_LIBRARY_PATH=$DYLD_FALLBACK_LIBRARY_PATH:/usr/local/mysql/lib
    export RUBY_HEAP_FREE_MIN=100000
    export RUBY_HEAP_MIN_SLOTS=600000
    export RUBY_GC_MALLOC_LIMIT=59000000
    ;;
esac

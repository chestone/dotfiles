export PATH=/usr/local/bin:/usr/local/sbin:$PATH

export CLICOLOR=1
export LSCOLORS=ExFxCxDxBxegedabagacad
export PS1='\n\[\033[0;32m\]\h\[\033[0;0m\] : \[\033[1;34m\]\w\[\033[0;0m\]\n\[\033[0;35m\]\$\[\033[0;0m\] '
export PS2='\[\033[0;35m\]>\[\033[0;0m\] '

alias ll='ls -l'
alias lla='ll -a'

if [ -z $SSH_CONNECTION ]; then
  if [ -n $(which mvim) ]; then
    alias vim='mvim'
  fi
fi

if [ -n $(which rbenv) ]; then
  eval "$(rbenv init -)"
fi
